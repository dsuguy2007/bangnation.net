        <table class="table table-striped table-condensed">
            <tr>
                <th>Start Date:</th>
                <td>{{ event.startdate|date(null, app.user.timezone) }}</td>
            </tr>
            {% if event.enddate|length > 0 %}
            <tr>
                <th>End Date:</th>
                <td>{{ event.enddate|date(null, app.user.timezone) }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Description:</th>
                <td>{{ event.description }}</td>
            </tr>
        </table>
