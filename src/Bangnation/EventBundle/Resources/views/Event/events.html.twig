{% extends "::layout.html.twig" %}

{% block content %}
<div class="span12">
    <div class="row-fluid">
        <div class="span6">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Event</th>
                    </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td><a href="{{ path('event', { 'slug': event.slug }) }}" alt="{{ event.name }}">{{ event.name }}</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
