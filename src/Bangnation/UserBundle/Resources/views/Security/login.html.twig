{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<div class="row">
    <div class="span8">
        Some other data here
    </div>
    <div class="span4">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div>
                <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>

            <div>
                <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                <input type="password" id="password" name="_password" />
            </div>    

            <div>
                <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }} <input type="checkbox" id="remember_me" name="_remember_me" value="on" /></label>
            </div>

            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />

            <hr />

            <a href="{{ path('fos_user_resetting_request') }}">Forgot Password</a> 
            <a href="{{ path('fos_user_registration_register') }}">Register</a> 

            <hr />
        {#    
            <h3>Demo Credentials</h3>
            Standard user: user/123<br />
            Admin user: admin/123<br />
            SuperAdmin user: super_admin/123<br />
        #}
        </form>
    </div>
</div>
{% endblock fos_user_content %}
