{% extends 'MopaBootstrapBundle::base.html.twig' %}

{% block head_style %}
{% stylesheets
    '@BangnationCommonBundle/Resources/public/sass/mopabootstrapbundle.scss'
    '@BangnationCommonBundle/Resources/public/css/ticker-style.css'
%}
<link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
{% endstylesheets %}
{% endblock head_style %}
    
{% block title %}Bang Nation{% endblock %}

{% block navbar %}
{% endblock navbar %}

{% block headline %}{% endblock headline %}

{% block footer %}
<p>
    <a href="{{ path('contact') }}">Contact Us</a>
    |
    <a href="{{ path('about') }}">About Us</a>
    |
    <a href="{{ path('terms') }}">Terms of Use/Community Guidelines</a>
    |
    <a href="{{ path('privacy') }}">Privacy Policy</a>
</p>
<p>&copy; Bang Nation {{ '' | date('Y') }}</p>
{% endblock footer %}

