{% extends '::base.html.twig' %}

{% block head_style %}
{{ parent() }}
{% stylesheets
    '@BangnationCommonBundle/Resources/public/sass/mopabootstrapbundle.scss'
    '@BangnationCommonBundle/Resources/public/css/ticker-style.css'
    '@BangnationChatBundle/Resources/public/css/chat.css'
%}
<link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
{% endstylesheets %}
{% endblock head_style %}

{% block foot_script %}
    {{ parent() }}
    {% javascripts
        '@BangnationChatBundle/Resources/public/js/chat.js'
        '@BangnationCommonBundle/Resources/public/js/common.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    {% endjavascripts %}
{% endblock foot_script %}